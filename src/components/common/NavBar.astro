---
import { Image } from 'astro:assets';
import myLogo from '../../assets/my-logo.svg';
import GitHubIcon from '../../assets/github.svg';
import LinkedinIcon from '../../assets/linkedin.svg';
import InstagramIcon from '../../assets/instagram.svg';
---

<nav
  class="fixed top-0 z-10 flex h-20 w-full items-center justify-between bg-slate-900/10 p-10 backdrop-blur-sm"
>
  <a
    href="/"
    class="relative hidden size-full h-20 items-center gap-6 text-white md:flex"
  >
    <Image
      src={myLogo}
      alt="logo"
      class="absolute top-1/2 left-0 size-28 -translate-x-1/2 -translate-y-1/2 lg:size-32"
    />

    <h2 class="ml-8 text-2xl font-semibold tracking-tight lg:text-4xl">
      Angel Valdez
    </h2>
  </a>
  <ul
    class="flex h-full items-center justify-end gap-8 text-emerald-600 lg:gap-16 [&>li:hover]:text-green-400"
  >
    <li class="group"><a href="#work">Work</a></li>
    <li class="group"><a href="#projects">Projects</a></li>
    <li class="group"><a href="#contact">Contact</a></li>

    <li>
      <ul
        class="flex w-full items-center gap-4 text-indigo-400 [&>li:hover]:text-fuchsia-500"
      >
        <li>
          <a href=""><GitHubIcon class="size-6" /> </a>
        </li>
        <li><a href=""><LinkedinIcon class="size-6" /></a></li>
        <li><a href=""><InstagramIcon class="size-6" /></a></li>
      </ul>
    </li>
    <li>
      <a
        href="/resume.pdf"
        target="_blank"
        rel="noopener noreferrer"
        class="rounded-2xl border-2 border-amber-500 px-4 py-1 text-amber-500"
        >Resume</a
      >
    </li>
  </ul>
</nav>
