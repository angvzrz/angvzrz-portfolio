---
import { Image } from 'astro:assets';
import myLogo from '../../assets/my-logo.svg';
import GitHubIcon from '../../assets/github.svg';
import LinkedinIcon from '../../assets/linkedin.svg';
import InstagramIcon from '../../assets/instagram.svg';
---

<nav
  class="fixed top-0 z-10 flex h-20 w-full items-center justify-between bg-slate-900/10 p-4 md:p-10"
>
  <a
    href="/"
    class="relative hidden size-full h-20 items-center gap-6 text-white md:flex"
  >
    <Image
      src={myLogo}
      alt="logo"
      class="absolute top-1/2 left-0 size-28 -translate-x-1/2 -translate-y-1/2 lg:size-32"
    />

    <h2 class="ml-8 text-2xl font-semibold tracking-tight lg:text-4xl">
      Angel Valdez
    </h2>
  </a>

  <ul
    class="flex size-full items-center justify-end gap-8 text-emerald-600 lg:gap-16 [&>li:hover]:text-green-400 [&>li>a]:transition-colors [&>li>a]:duration-300 [&>li>a]:ease-out"
  >
    <ul class="hidden gap-8 lg:flex">
      <li class="font-semibold"><a href="#work">Work</a></li>
      <li class="font-semibold"><a href="#projects">Projects</a></li>
      <li class="font-semibold"><a href="#contact">Contact</a></li>
    </ul>

    <li>
      <ul
        class="flex w-full items-center gap-4 text-indigo-400 [&>li:hover]:text-fuchsia-500 [&>li>a]:transition-colors [&>li>a]:duration-300 [&>li>a]:ease-out"
      >
        <li>
          <a
            href="https://github.com/angvzrz"
            target="_blank"
            rel="noopener noreferrer"
            ><GitHubIcon class="size-6" />
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/angvzrz"
            target="_blank"
            rel="noopener noreferrer"><LinkedinIcon class="size-6" /></a
          >
        </li>
        <li>
          <a
            href="https://www.instagram.com/ang_vzrz"
            target="_blank"
            rel="noopener noreferrer"><InstagramIcon class="size-6" /></a
          >
        </li>
      </ul>
    </li>

    <li>
      <a href="/resume.pdf" target="_blank" rel="noopener noreferrer">
        <span
          class="block transform rounded-2xl border-2 border-amber-500 px-4 py-1 text-amber-500 transition-transform duration-100 ease-in-out hover:-translate-y-1.5 active:translate-y-0"
        >
          Resume
        </span>
      </a>
    </li>
  </ul>
</nav>
